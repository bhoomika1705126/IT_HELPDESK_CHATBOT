# Application Settings
APP_NAME=IT Helpdesk Bot
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-secret-key-change-this-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/helpdesk_db
REDIS_URL=redis://localhost:6379/0

# OpenAI API (for AI-powered responses)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# ServiceNow Integration
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=admin
SERVICENOW_PASSWORD=your-password
SERVICENOW_API_VERSION=v1

# Jira Integration
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=HELP

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url
TEAMS_APP_ID=your-teams-app-id
TEAMS_APP_PASSWORD=your-teams-app-password

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=helpdesk@company.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=IT Helpdesk <helpdesk@company.com>

# Active Directory / LDAP
AD_SERVER=ldap://dc.company.com
AD_DOMAIN=company.com
AD_ADMIN_USER=admin@company.com
AD_ADMIN_PASSWORD=your-ad-password
AD_BASE_DN=DC=company,DC=com

# Azure AD (for cloud environments)
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# Remote Desktop Integration
RDP_GATEWAY=rdp.company.com
RDP_PORT=3389
SCREEN_SHARE_ENABLED=True

# Monitoring & Analytics
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000
SENTRY_DSN=https://your-sentry-dsn

# ScaleDown Configuration
SCALEDOWN_ENABLED=True
COMPRESSION_RATIO=0.85
KNOWLEDGE_BASE_PATH=./data/knowledge_base

# ML Model Settings
MODEL_PATH=./models
CONFIDENCE_THRESHOLD=0.75
AUTO_RESOLVE_THRESHOLD=0.85

# Ticket Settings
DEFAULT_PRIORITY=Medium
AUTO_ESCALATE_HOURS=4
SLA_RESPONSE_MINUTES=30
SLA_RESOLUTION_HOURS=24

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
ENABLE_RATE_LIMITING=True
MAX_REQUESTS_PER_MINUTE=100

# Feature Flags
ENABLE_VOICE_SUPPORT=True
ENABLE_PREDICTIVE_MAINTENANCE=True
ENABLE_AUTO_PASSWORD_RESET=True
ENABLE_REMOTE_DIAGNOSTICS=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/helpdesk.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10
